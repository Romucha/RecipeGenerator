@using Microsoft.AspNetCore.Components.Forms
<ContextMenu Id="@Step.Id.ToString()">
    <Item>
        Add an ingredient to this step...
        <SubMenu>
            @if (SelectedIngredients?.Any() == true)
            {
                @foreach (var ingredient in SelectedIngredients)
                {
                    <Item OnClick="((e) => { Step.AddIngredient(ingredient); })" title="@ingredient.Description">@ingredient.Name</Item>
                }
            }
        </SubMenu>
    </Item>
</ContextMenu>
<ContextMenuTrigger MenuId="@Step.Id.ToString()">
    <InputTextArea @bind-Value="@Step.Description"/>
</ContextMenuTrigger>