<div style="display: flex; flex-direction: column">
    <a class="btn-primary" href="@($"/edit-recipe/{ViewModel.Id}")">@StringLocalizer["EditRecipe"]</a>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.Name)]: 
        </div>
        <div>
            @ViewModel.Name
        </div>
    </div>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.Image)]: 
        </div>
        <div>
            <img src="@($"data:image/png;base64,{ViewModel.Image}")" width="150" height="150" alt="@ViewModel.Name" />
        </div>
    </div>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.Description)]: 
        </div>
        <div>
            @ViewModel.Description
        </div>
    </div>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.Portions)]: 
        </div>
        <div>
            @ViewModel.Portions
        </div>
    </div>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.EstimatedTime)]: 
        </div>
        <div>
            @ViewModel.EstimatedTime
        </div>
    </div>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.CreatedAt)]: 
        </div>
        <div>
            @ViewModel.CreatedAt
        </div>
    </div>
    <div style="display: flex; flex-direction: row">
        <div>
            @StringLocalizer[nameof(ViewModel.UpdatedAt)]: 
        </div>
        <div>
            @ViewModel.UpdatedAt
        </div>
    </div>
    <div style="display: flex; flex-direction: column">
        <div>@StringLocalizer["Ingredients"]</div>
        @foreach (var ingredient in ViewModel.Ingredients)
        {
                <div style="display: flex; flex-direction: column" title="@ingredient.Description">
                    <div style="display: flex; flex-direction: row">
                        <div>
                            @StringLocalizer[nameof(ingredient.Name)]: 
                        </div>
                        <div>
                            @ingredient.Name
                        </div>
                    </div>
                </div>
                <div>
                    <a href="@($"/details-ingredient/{ingredient.IngredientId}")">
                        @StringLocalizer["More"]
                    </a>
                </div>
        }
    </div>
    <div style="display: flex; flex-direction: column">
        <div>@StringLocalizer["Steps"]</div>
        @foreach (var step in ViewModel.Steps)
        {
            <div style="display: flex; flex-direction: column">
                <div style="display: flex; flex-direction: row">
                    <div>
                        @StringLocalizer[nameof(step.Name)]: 
                    </div>
                    <div>
                        @step.Name
                    </div>
                </div>
            </div>
            <div style="display: flex; flex-direction: column">
                <div style="display: flex; flex-direction: row">
                    <div>
                        @StringLocalizer[nameof(step.Description)]: 
                    </div>
                    <div>
                        @step.Description
                    </div>
                </div>
            </div>
            <div style="display: flex; flex-direction: column">
                <div style="display: flex; flex-direction: row">
                    <div>
                        @StringLocalizer[nameof(step.CreatedAt)]: 
                    </div>
                    <div>
                        @step.CreatedAt
                    </div>
                </div>
            </div>
            <div style="display: flex; flex-direction: column">
                <div style="display: flex; flex-direction: row">
                    <div>
                        @StringLocalizer[nameof(step.UpdatedAt)]: 
                    </div>
                    <div>
                        @step.UpdatedAt
                    </div>
                </div>
            </div>
        }
    </div>
</div>
