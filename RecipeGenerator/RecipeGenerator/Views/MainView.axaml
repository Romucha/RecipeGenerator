<UserControl
    x:Class="RecipeGenerator.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lc="clr-namespace:RecipeGenerator.Assets.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RecipeGenerator.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TabControl
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            TabStripPlacement="Left">
            <TabItem Header="{x:Static lc:Resource.Home}" />
            <TabItem Header="{x:Static lc:Resource.Recipes}" />
            <TabItem Header="{x:Static lc:Resource.Ingredients}" />
            <TabItem Header="{x:Static lc:Resource.Settings}" />
            <TabItem Header="{x:Static lc:Resource.About}" />
        </TabControl>
    </Grid>
</UserControl>
